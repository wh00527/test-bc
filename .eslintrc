{
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2017
	},
	"env": {
		"es6": true,
		"node": true,
		"jest": true
	},
	"rules": {
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"indent": [
			"error",
			2,
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "res|next"
			}
		],
		"semi": [
			"error",
			"always"
		],
		"eqeqeq": [
			"error"
		],
		"curly": [
			"warn"
		],
		"prefer-const": [
			"warn"
		]
	},
	"overrides": [
		{
			"files": [
				"*test.js",
				"*spec.js"
			],
			"rules": {
				"no-console": "off"
			}
		}
	]
}